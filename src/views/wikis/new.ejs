<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>

        <main class="container">

            <% include ../static/partials/messages.ejs %>

        <h1>New Wiki</h1>

        <form action="/wikis/create" method="post">
            <div class="form-group">
                <label for="title">Wiki title</label>
                <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
                <small class="text-muted" id="titleHelp">Title must be 2 or more characters in length.</small>
            </div>
            <div class="form-group">
                <label for="body">Body</label>
                <textarea rows="8" class="form-control" name="body" placeholder="Share Something!"></textarea>
                <small class="text-muted" id="bodyHelp">body must be 5 or more characters in length.</small>
            </div>
            <% if(currentUser && (currentUser.role === 1 || currentUser.role === 2)) { %>
                <div class="form-group">
                    <label for="private">
                        Status
                    </label>
                    <select name="private" class="form-control" style="width: 30%;">
                        <option value=""></option>
                        <option value="false">Public</option>
                        <option value="true">Private</option>
                    </select>
                </div>
            <% } %>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        </main>

        <% include ../static/partials/baseScripts.ejs %>

    </body>
</html>